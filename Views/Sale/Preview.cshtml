
@{
    ViewData["Title"] = "Sale Product Preview";
    var sale = ViewBag.Sale;
}

<div class="">
    <h1 class="display-4 text-center">Sale Product Preview</h1>

    <div class="card">
        <div class="mt-3 mx-2 text-left">
            <table class="table table-bordered border-primary text-left">
                <tbody>
                    <tr>
                        <td style="width: 200px;">Sale ID: </td>
                        <td> @sale.Id </td>
                    </tr>
                    <tr>
                        <td>Customer : </td>
                        <td> @sale.Customer </td>
                    </tr>
                    
                    <tr>
                        <td>Customer Phone : </td>
                        <td> @sale.CustomerPhone </td>
                    </tr>
                    <tr>
                        <td>Product : </td>
                        <td> @sale.Product </td>
                    </tr>
                    <tr>
                        <td>Product Unit Price: </td>
                        <td> @sale.UnitPrice </td>
                    </tr>
                    <tr>
                        <td>Product QTY: </td>
                        <td> @sale.Qty </td>
                    </tr>
                    <tr>
                        <td>Product Amount: </td>
                        <td> @sale.Amount </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</div>
