@using WebApp01.Models.Entites;
@model Product
@{
    ViewData["Title"] = "Edit Product";
}

<div class="text-center">
    <h1 class="display-4">Edit Product</h1>

    <div class="card">
        <div class="mt-3 mx-2">
            <form class="p-3" method="post">
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label class="form-label">Product Name</label>
                        <input type="text" asp-for="Name" class="form-control">
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="mb-3 col-md-3">
                        <label class="form-label">Quantity</label>
                        <input type="number" asp-for="Qty" class="form-control">
                    </div>
                    <div class="mb-3 col-md-3">
                        <label class="form-label">Unit Price</label>
                        <input type="number" asp-for="UnitPrice" class="form-control">
                    </div>
                    <div class="mb-3 col-md-12">
                        <label class="form-label">Details</label>
                        <textarea asp-for="Details" class="form-control" rows="2"></textarea>
                    </div>
                </div>
                <div>
                    <button type="submit" asp-controller="Product" asp-action="Save" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>

</div>
